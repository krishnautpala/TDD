#!/usr/bin/python
import sys
import converTool

# input
pounds = 20
kg = 9.071
litre = 20
gal = 1
k_meter = 5
mile = 3.11


print 'lb to kg : ', converTool.lb_to_kg(pounds)

print 'kg to lb : ', converTool.kg_to_lb(kg)

print 'lt to gal: ',converTool.lt_to_gal(litre)

print 'gal to lt: ',converTool.gal_to_lt(gal)

print 'km to mile: ',converTool.km_to_mi(k_meter)

print 'mile to km: ',converTool.mi_to_km(mile)

